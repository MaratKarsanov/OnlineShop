@model AddProductViewModel

<form method="post" target="_self" enctype="multipart/form-data">
    <div class="row">
        @await Html.PartialAsync("AdministratorPanel")
        <div class="col-6">
            <div class="validation" asp-validation-summary="All"></div>
            <div class ="form-group">
                <label asp-for="Name">Название:</label>
                <input type="text" asp-for="Name" placeholder="Name">
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cost">Цена:</label>
                <input type="number" asp-for="Cost" placeholder="Cost">
                <span asp-validation-for="Cost"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description">Описание:</label>
                <input type="text" asp-for="Description" placeholder="Description">
                <span asp-validation-for="Description"></span>
            </div>
            <div class="form-group">
                <label asp-for="UploadedFiles">Загрузить изображения</label>
                <input type="file" name="UploadedFiles" multiple accept="image/*" class="form-control" />
                <span asp-validation-for="UploadedFiles" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit"
                        style="margin-top:10px"
                        class="btn btn-success btn-group"
                        asp-action="Add"
                        asp-area="Administrator"
                        asp-controller="Product">
                    Добавить
                </button>
            </div>
        </div>
    </div>
</form>
