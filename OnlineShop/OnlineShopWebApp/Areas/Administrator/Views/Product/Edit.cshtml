@model Product

<form method="post" target="_self">
    <div class="row">
        <div class="col-6">
            <img class="" src="@Model.ImageLink" style="width: 600px; height: 400px;" />
        </div>
        <div class="col-6">
            <div class="validation" asp-validation-summary="All"></div>
            <div>
                <label asp-for="Name">Название:</label>
                <input type="text" asp-for="Name" placeholder="New name" value="@Model.Name">
                <span asp-validation-for="Name"></span>
            </div>
            <div>
                <label asp-for="Cost">Цена:</label>
                <input type="number" asp-for="Cost" placeholder="New cost" value="@Model.Cost.ToString().Replace(",", ".")">
                <span asp-validation-for="Cost"></span>
            </div>
            <div>
                <label asp-for="Description">Описание:</label>
                <input type="text" asp-for="Description" placeholder="New description" value="@Model.Description">
                <span asp-validation-for="Description"></span>
            </div>
            <div>
                <button type="submit" asp-action="Edit" asp-area="Administrator" asp-controller="Product" asp-route-Id="@Model.Id">
                    Внести изменения
                </button>
            </div>
        </div>
    </div>
</form>
<a class="btn btn-light" style="margin:10px" asp-area="Administrator" asp-action="Index" asp-controller="Product" role="button">К списку продуктов</a>
