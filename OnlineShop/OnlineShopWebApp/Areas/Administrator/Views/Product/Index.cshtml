@model IEnumerable<Product>
@{
    var productNumber = 0;
}
<div class="row">
    @await Html.PartialAsync("AdministratorPanel")
    <div class="col-9">
        <h2>Список продуктов</h2>
        <a asp-area="Administrator" asp-controller="Product" asp-action="Add">Добавить новый продукт</a>
        <table class="table">
            <thead>
                <tr>
                    <th>№</th>
                    <th>Название</th>
                    <th>Цена</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@(++productNumber)</td>
                        <td>
                            <a style="color: black" asp-area="Administrator" asp-controller="Product" asp-action="Edit" asp-route-productId="@product.Id">
                                @product.Name
                            </a>
                        </td>
                        <td>@product.Cost</td>
                        <td>
                            <a asp-area="Administrator" asp-controller="Product" asp-action="Edit" asp-route-productId="@product.Id">Редактировать</a>
                        </td>
                        <td>
                            <a asp-action="Remove" asp-area="Administrator" asp-controller="Product" asp-route-productId="@product.Id">Удалить</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>