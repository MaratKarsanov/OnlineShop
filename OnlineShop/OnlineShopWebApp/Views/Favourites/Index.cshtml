@model IEnumerable<ProductViewModel>

@if (Model is null)
{
    <p>Вы не авторизованы</p>
    <a class="btn btn-light"
       asp-area=""
       asp-controller="Account"
       asp-action="Login"
       role="button">
        Авторизоваться
    </a>
    return;
}
@if (Model.Count() == 0)
{
    <div>В избранном нет товаров!</div>
    return;
}
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>Название</th>
            <th>Цена</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>
                    <img style="width: 60px; height: 40px;" src="@product.ImageLink" />
                </td>
                <td>
                    <a style="color: black" href="/product/index/@product.Id">
                        @product.Name
                    </a>
                </td>
                <td>@product.Cost</td>
                <td>
                    <a 
                        asp-controller="Favourites" 
                        asp-action="Remove" 
                        asp-route-productId="@product.Id" 
                        asp-route-controllerName="Favourites" >
                        Удалить
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-light" style="margin:10px" asp-controller="Home" asp-action="Index" role="button">Продолжить покупки</a>