@model UserViewModel

@if (Model is null)
{
    <p>Вы не авторизованы</p>
    <a class="btn btn-light"
       asp-area=""
       asp-controller="Autorization"
       asp-action="Index"
       role="button">
        Авторизоваться
    </a>
    return;
}
<div class="row">
    <div class="col-6">
        <div>
            <p>Логин: @Model.Login</p>
        </div>
        <div>
            <p>Имя: @Model.Name</p>
        </div>
        <div>
            <p>Фамилия: @Model.Surname</p>
        </div>
        <div>
            <p>Адрес: @Model.Address</p>
        </div>
        <div>
            <p>Телефон: @Model.PhoneNumber</p>
        </div>
        <button class="btn btn-dark dropdown-toggle"
                type="button"
                id="dropdownMenuButton"
                data-bs-toggle="dropdown"
                aria-haspopup="true"
                aria-expanded="false">
            Действия
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item" asp-area="Administrator" asp-controller="User" asp-action="ChangePassword" asp-route-login="@Model.Login">
                Смена пароля
            </a>
            <a class="dropdown-item" asp-area="Administrator" asp-controller="User" asp-action="EditData" asp-route-login="@Model.Login">
                Редактирование данных
            </a>
            <a class="dropdown-item" asp-area="Administrator" asp-controller="User" asp-action="Delete" asp-route-login="@Model.Login">
                Удалить
            </a>
        </div>
        <button class="btn btn-dark dropdown-toggle"
                type="button"
                id="dropdownMenuButton2"
                data-bs-toggle="dropdown"
                aria-haspopup="true"
                aria-expanded="false">
            Информация о предыдущих заказах
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton2">
            @if (Model.DeliveryDatas.Count == 0)
            {
                <a class="dropdown-item">
                    Заказов дæм нæй
                </a>
            }
            else
            {
                @foreach (var deliveryData in Model.DeliveryDatas)
                {
                    <a class="dropdown-item">
                        @deliveryData.Name;
                        @deliveryData.Surname;
                        @deliveryData.Address;
                        @deliveryData.PhoneNumber
                    </a>
                }
            }
        </div>
    </div>
</div>