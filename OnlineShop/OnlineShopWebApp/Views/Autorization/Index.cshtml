@model AutorizationData

<form method="post" target="_self">
    <h2>Авторизация</h2>
    <div class="validation" asp-validation-summary="All"></div>
    <fieldset>
        <div>
            <label asp-for="UserName">Логин:</label>
            <input type="text" asp-for="UserName" placeholder="Login">
            <span asp-validation-for="UserName"></span>
        </div>
        <div>
            <label asp-for="Password">Пароль:</label>
            <input type="password" asp-for="Password" placeholder="Password">
            <span asp-validation-for="Password"></span>
        </div>
        <div>
            <label asp-for="RememberMe">Запомнить меня</label>
            <input type="checkbox" asp-for="RememberMe" value="true">
        </div>
        <div>
            <a asp-action="Register" asp-controller="Account">Регистрация</a>
        </div>
    </fieldset>
    <div>
        <button type="submit" asp-action="Login" asp-controller="Account">
            Войти
        </button>
    </div>
</form>