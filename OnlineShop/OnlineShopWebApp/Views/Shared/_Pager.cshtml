@model OnlineShopWebApp.Models.Pager

<div class="container">
    <ul class="pagination">
        @if (Model.CurrentPage > 1)
        {
            <li class="page-item">
                <a class="page-link" asp-controller="Home" asp-action="Index" asp-route-pageNumber="1">First</a>
            </li>
            <li class="page-item">
                <a class="page-link" asp-controller="Home" asp-action="Index" asp-route-pageNumber="@(Model.CurrentPage - 1)">Previous</a>
            </li>
        }
        @for(var i = Model.StartPage; i <= Model.EndPage; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                <a class="page-link" asp-controller="Home" asp-action="Index" asp-route-pageNumber="@i">@i</a>
            </li>
        }
        @if (Model.CurrentPage < Model.PagesCount)
        {
            <li class="page-item">
                <a class="page-link" asp-controller="Home" asp-action="Index" asp-route-pageNumber="@(Model.CurrentPage + 1)">Next</a>
            </li>
            <li class="page-item">
                <a class="page-link" asp-controller="Home" asp-action="Index" asp-route-pageNumber="@Model.PagesCount">Last</a>
            </li>
        }
    </ul>
</div>
