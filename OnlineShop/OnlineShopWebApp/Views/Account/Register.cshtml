@model RegistrationData

<form method="post" target="_self">
    <h2>Регистрация</h2>
    <div class="validation" asp-validation-summary="All"></div>
    <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
    <fieldset>
        <div>
            <label asp-for="UserName">Имя пользователя:</label>
            <input type="text" asp-for="UserName" placeholder="Login">
            <span asp-validation-for="UserName"></span>
        </div>
        <div>
            <label asp-for="Password">Пароль:</label>
            <input type="password" asp-for="Password" placeholder="Password">
            <span asp-validation-for="Password"></span>
        </div>
        <div>
            <label asp-for="RepeatedPassword">Повторите пароль:</label>
            <input type="password" asp-for="RepeatedPassword" placeholder="Repeat password">
            <span asp-validation-for="RepeatedPassword"></span>
        </div>
        <div>
            <label asp-for="PhoneNumber">Телефон:</label>
            <input type="text" asp-for="PhoneNumber" placeholder="Phone Number">
            <span asp-validation-for="PhoneNumber"></span>
        </div>
    </fieldset>
    <div>
        <button type="submit"
                asp-area=""
                asp-action="Register"
                asp-controller="Account">
            Зарегистрироваться
        </button>
    </div>
</form>