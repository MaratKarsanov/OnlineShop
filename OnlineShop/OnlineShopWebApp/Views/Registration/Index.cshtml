@model RegistrationData

<form method="post" target="_self">
    <h2>Регистрация</h2>
    <div class="validation" asp-validation-summary="All"></div>
    <fieldset>
        <div>
            <label asp-for="UserName">Логин:</label>
            <input type="text" asp-for="UserName" placeholder="Login">
            <span asp-validation-for="UserName"></span>
        </div>
        <div>
            <label asp-for="Password">Пароль:</label>
            <input type="password" asp-for="Password" placeholder="Password">
            <span asp-validation-for="Password"></span>
        </div>
        <div>
            <label asp-for="RepeatedPassword">Повторите пароль:</label>
            <input type="password" asp-for="RepeatedPassword" placeholder="Repeat password">
            <span asp-validation-for="RepeatedPassword"></span>
        </div>
        <div>
            <label asp-for="Name">Имя:</label>
            <input type="text" asp-for="Name" placeholder="Name">
            <span asp-validation-for="Name"></span>
        </div>
        <div>
            <label asp-for="Surname">Фамилия:</label>
            <input type="text" asp-for="Surname" placeholder="Surname">
            <span asp-validation-for="Surname"></span>
        </div>
        <div>
            <label asp-for="Address">Домашний адрес:</label>
            <input type="text" asp-for="Address" placeholder="Address">
            <span asp-validation-for="Address"></span>
        </div>
        <div>
            <label asp-for="PhoneNumber">Телефон:</label>
            <input type="text" asp-for="PhoneNumber" placeholder="Phone Number">
            <span asp-validation-for="PhoneNumber"></span>
        </div>
    </fieldset>
    <div>
        <button type="submit" asp-action="Register" asp-controller="Registration">
            Зарегистрироваться
        </button>
    </div>
</form>