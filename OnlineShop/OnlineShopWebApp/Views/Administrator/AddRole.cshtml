@model Role

<form method="post" target="_self">
    <div class="row">
        @await Html.PartialAsync("AdministratorPanel")
        <div class="col-6">
            <div class="validation" asp-validation-summary="All"></div>
            <div>
                <label asp-for="Name">Название:</label>
                <input type="text" asp-for="Name" placeholder="Name">
                <span asp-validation-for="Name"></span>
            </div>
            <div>
                <button type="submit" asp-action="AddRole" asp-controller="Administrator">
                    Добавить роль
                </button>
            </div>
        </div>
    </div>
</form>
<a class="btn btn-light" style="margin:10px" asp-controller="Administrator" asp-action="Products" role="button">К списку продуктов</a>
