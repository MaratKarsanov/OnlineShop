{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "/logs/log.json",
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 1048576,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter,Serilog.Formatting.Compact",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithThreadId", "WithMachineName" ]
  },
  "ConnectionStrings": {
    //"online_shop_karsanov": "Server=82.146.34.6;Port=39817;Username=postgres;Password=1Secure*Password1;Database=online_shop_karsanov;SSL Mode=Disable"
    "online_shop_karsanov": "Host=localhost;Port=5432;Database=online_shop_karsanov;Username=postgres;Password=1Secure*Password1;"
    //"online_shop_karsanov": "Server=postgre;Port=5432;Username=postgres;Password=1Secure*Password1;Database=online_shop_karsanov;SSL Mode=Disable"
  },
  "Redis": {
    "ConnectionString": "localhost:6379"
    //"ConnectionString": "redis:6379,abortConnect=False"
  }
}
